[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false
  ff = false
[pull]
  ff = only
[push]
  default = current
[core]
  autocrlf = input
  quotepath = false
  # editor = ~/.go/bin/micro
  excludesfile = ~/dotfiles/.gitignore.my
  pager = "diff-so-fancy | less --tabs=4 -RFX"
  # pager = delta --plus-color="#012800" --minus-color="#340001" --theme='Monokai Extended'
[fetch]
  prune = true
[pager]
  branch = cat
  config = cat
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[ghq]
  root = ~/.ghq
[alias]
  tree = log --graph --pretty=format:'%x09%C(auto) %h %Cgreen %ar %Creset%x09"%C(cyan ul)%an%Creset" %x09%C(auto)%s %d'
  c = commit -v
  co = checkout
  s = switch
  sc = switch -c
  pl = pull
  # pu = push
  b = branch
  ss = status -s
# [credential]
# macOS
# helper = osxkeychain
# Ubuntu
# helper = store
# Windows
# helper = wincred
[interactive]
  diffFilter = delta --color-only
[gpg]
  program = gpg
# [commit]
#   gpgsign = true
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  frag = magenta bold
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
