# グローバルな .gitignore は ~/.config/git/ignore に配置する (cf. .gitignore.my.gitignore)
[init]
  defaultBranch = main
[core]
  autocrlf = input
  quotepath = false
  pager = delta
  hooksPath = ~/.githooks
[alias]
  tree = log --graph --pretty=format:'%x09%C(auto) %h %Cgreen %ar %Creset%x09"%C(cyan ul)%an%Creset" %x09%C(auto)%s %d'
  s = switch
  b = branch
  ss = status -s
  coam = commit --amend -C HEAD --date=now
[fetch]
  prune = true
[pull]
  ff = only
[push]
  default = current
  autoSetupRemote = true
[merge]
  tool = vimdiff
  conflictstyle = diff3
  prompt = false
  ff = false
[diff]
  tool = vimdiff
  colorMoved = default # default は zebra
[difftool]
  prompt = false
[interactive]
  diffFilter = delta --color-only
[sequence]
  editor = interactive-rebase-tool
[pager]
  branch = bat --paging=always --pager 'less -XF'
  config = bat --paging=always --pager 'less -XF'
  log = bat --paging=always --pager 'less -XF'
  status = bat --paging=always --pager 'less -XF'
  tag = bat --paging=always --pager 'less -XF'
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[color "diff"]
  frag = magenta bold
  meta = 11
  frag = magenta bold
  commit = yellow bold
  old = red bold
  new = green bold
  whitespace = red reverse
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge --skip -- %f
  process = git-lfs filter-process --skip
  required = true
[delta]
  navigate = true
  dark = true
  light = false
  side-by-side = false
  line-numbers = true
