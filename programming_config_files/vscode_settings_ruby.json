{
  "ruby.rubocop.executePath": "HOME/.rbenv/shims/",
  "ruby.rubocop.configFilePath": "REPO/.rubocop.yml",
  "ruby.rubocop.useBundler": false,
  "ruby.useLanguageServer": false,
  "[ruby]": {
    // 保存時に自動的に Lint を走らせるためにはこの設定がキモ
    "editor.formatOnSave": true,
  "yaml.validate": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true
  },
  // ファイルブラウザには表示するが、検索から除外する
  "search.exclude": {
    ".cahce": true,
    ".yarn": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true
  }
}
