{
  "editor.formatOnPaste": false,
  "editor.formatOnSaveMode": "file",
  "editor.renderWhitespace": "all",
  "solargraph.diagnostics": false,
  "solargraph.commandPath": "$HOME/.rbenv/shims/solargraph",
  "solargraph.bundlerPath": "$HOME/.rbenv/shims/bundle",
  "solargraph.definitions": true,
  "solargraph.references": true,
  "ruby.rubocop.executePath": "$HOME/.rbenv/shims/",
  "ruby.rubocop.configFilePath": "REPO/.rubocop.yml",
  "ruby.rubocop.useBundler": false,
  "ruby.useLanguageServer": false,
  "[ruby]": {
    // 保存時に自動的に Lint を走らせるためにはこの設定がキモ
    "editor.formatOnSave": true
  },
  "yaml.validate": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.DS_Store": true
  },
  // ファイルブラウザには表示するが、検索から除外する
  "search.exclude": {
    ".cahce": true,
    ".yarn": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/tmp": true
  },
  // "editor.fontFamily": "HackGen Console NFJ",
  // "editor.fontFamily": "PlemolJP Console NFJ",
  // "terminal.integrated.fontFamily": "HackGen Console NFJ"
  // "terminal.integrated.fontFamily": "PlemolJP Console NFJ"
}
